<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.example.templatesampleapp.model.uimodel.PurposeListItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/list_item_shape"
        android:layout_margin="@dimen/_6sdp"
        android:paddingStart="@dimen/_42sdp"
        android:layout_height="@dimen/_52sdp"
        tools:ignore="RtlSymmetry">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aspira_medium"
            android:text="@{model.name}"
            android:textColor="@color/woodsmoke"
            android:textSize="@dimen/_16ssp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Purpose List Items" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>